<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            Perfil de Usuario
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center">
                    <img src="{{#foto}}public/imagenes/{{foto}}{{/foto}}" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px;" alt="foto de perfil">
                    <p class="card-text"><strong>{{nombre}}</strong></p>
                </div>
                <div class="col-md-9">
                    <p class="card-text"><strong>Nombre de usuario:</strong> {{username}}</p>
                    <p class="card-text"><strong>Año de nacimiento:</strong> {{anio_nacimiento}}</p>
                    <p class="card-text"><strong>País:</strong> {{pais}}</p>
                    <p class="card-text"><strong>Ciudad:</strong> {{ciudad}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
